{
	"name": "@p8ec/shared",
	"version": "1.2.0",
	"description": "P(8) Global Shared Library for Javascript",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/p8ec/p8-shared.git"
	},
	"bugs": {
		"url": "https://github.com/p8ec/p8-shared/issues"
	},
	"homepage": "https://github.com/p8ec/p8-shared",
	"scripts": {
		"build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
		"build:esm": "tsc -p configs/tsconfig.esm.json",
		"build:cjs": "tsc -p configs/tsconfig.cjs.json && chmod -R +x dist/cjs/bin/*.js",
		"build:types": "tsc -p configs/tsconfig.types.json",
		"clean": "rimraf dist docs coverage",
		"reset": "npm run clean && rimraf node_modules && npm install",
		"test": "jest --no-cache --runInBand",
		"test:cov": "jest --coverage --no-cache --runInBand",
		"lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\"",
		"lint:fix": "eslint --cache --fix \"src/**/*.{js,jsx,ts,tsx}\"",
		"docs:build": "typedoc --name 'P(8) Global Shared Library' --includeVersion --readme README_GENERATED.md --out docs src",
		"docs:patch": "mv docs/functions docs/funcs && sed -i'.bak' 's/href=\\\"functions/href=\\\"funcs/g' docs/*.html",
		"docs:clean": "rimraf docs"
	},
	"bin": {
		"p8-shared-cli": "dist/cjs/bin/p8-shared-cli.js"
	},
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@swc/cli": "^0.4.1-nightly.20240914",
		"@swc/core": "^1.7.26",
		"@swc/jest": "^0.2.36",
		"@types/jest": "^29.5.13",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.10",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typedoc": "^0.26.7",
		"typescript": "5.5.4"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "npm run lint:fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"license": "MIT",
	"lint-staged1": {
		"*.{js,jsx,ts,tsx}": "npm run lint:fix"
	},
	"dependencies": {
		"@eslint/js": "^9.11.1",
		"@types/eslint__js": "^8.42.3",
		"eslint": "^9.11.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-headers": "^1.1.2",
		"eslint-plugin-prettier": "^5.2.1",
		"ferramenta": "^1.3.2",
		"prettier": "^3.3.3",
		"typescript-eslint": "^8.7.0"
	}
}
