{
	"name": "@p8ec/shared",
	"version": "1.3.0",
	"description": "P(8) Global Shared Library",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/p8ec/p8-shared.git"
	},
	"bugs": {
		"url": "https://github.com/p8ec/p8-shared/issues"
	},
	"homepage": "https://github.com/p8ec/p8-shared",
	"scripts": {
		"build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types && npm run build:assets",
		"build:esm": "tsc -p configs/tsconfig.esm.json",
		"build:cjs": "tsc -p configs/tsconfig.cjs.json && chmod -R +x dist/cjs/bin/*.js",
		"build:types": "tsc -p configs/tsconfig.types.json",
		"build:assets": "cp -R src/assets dist",
		"clean": "rm -rf dist docs coverage",
		"cli": "ts-node src/bin/p8-shared-cli.ts",
		"reset": "npm run clean && rm -rf node_modules && npm install",
		"postinstall": "lefthook install",
		"test": "jest --no-cache --runInBand",
		"test:cov": "jest --coverage --no-cache --runInBand",
		"lint": "eslint --cache \"src/**/*.{js,jsx,ts,tsx}\"",
		"lint:fix": "eslint --cache --fix \"src/**/*.{js,jsx,ts,tsx}\"",
		"docs:build": "typedoc --name 'P(8) Global Shared Library' --includeVersion --readme README_GENERATED.md --out docs src",
		"docs:patch": "mv docs/functions docs/funcs && sed -i'.bak' 's/href=\\\"functions/href=\\\"funcs/g' docs/*.html",
		"docs:clean": "rimraf docs"
	},
	"bin": {
		"p8-shared-cli": "dist/cjs/bin/p8-shared-cli.js",
		"p8-cli": "dist/cjs/bin/p8-shared-cli.js"
	},
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"dependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"lefthook": "^1.7.6",
		"@typescript-eslint/eslint-plugin": "^7",
		"@typescript-eslint/parser": "^7.7.0",
		"eslint": "^8 || ^9",
		"eslint-config-prettier": "^9",
		"eslint-plugin-header": "^3",
		"eslint-plugin-prettier": "^5",
		"prettier": "^3.3.3"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.5",
		"rimraf": "^5.0.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	},
	"peerDependencies": {
		"ferramenta": "^1.3.0"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"jest": true
		},
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint",
			"header"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:prettier/recommended"
		],
		"ignorePatterns": [
			"node_modules",
			"build",
			"dist",
			"docs",
			"*.config.ts",
			"*.config.js",
			"*rc.ts",
			"*rc.js"
		],
		"rules": {
			"@typescript-eslint/interface-name-prefix": "off",
			"@typescript-eslint/explicit-function-return-type": "off",
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/no-explicit-any": "off",
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "^_"
				}
			],
			"header/header": [
				2,
				"block",
				[
					"*",
					" * 2023 Copyright P8 Enterprise Components, Inc.",
					" * All Rights Reserved.",
					" "
				],
				2
			]
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "npm run lint:fix"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"tabWidth": 2,
		"useTabs": true,
		"printWidth": 120,
		"bracketSpacing": true
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
