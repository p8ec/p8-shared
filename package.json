{
  "name": "p8-shared",
  "workspaces": [
    "javascript"
  ],
  "description": "This repository contains the shared library for all P(8) products.",
  "scripts": {
    "build": "npm --workspaces run build",
    "test": "npm --workspaces run test",
    "reset": "rm -rf packages/**/node_modules node_modules && npm i",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "postinstall": "lefthook install",
    "scripts:test": "cd tests/scripts && find . -type f -name \"*.test.sh\" -exec sh {} \\;"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.2",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^29.5.14",
    "commitlint": "^19.8.1",
    "jest": "^29.7.0",
    "lefthook": "^1.12.2",
    "lint-staged": "^16.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.7",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npm run lint:fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
